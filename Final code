    <script>
        const anonymousCheckbox = document.getElementById('anonymous');
        const nonAnonymousField = document.getElementById('nonAnonymousField');

        anonymousCheckbox.addEventListener('change', function() {
            if (this.checked) {
                nonAnonymousField.classList.add('hidden');
            } else {
                nonAnonymousField.classList.remove('hidden');
            }
        });
    </script>
